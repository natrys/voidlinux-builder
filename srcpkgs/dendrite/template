nopie=yes

do_build() {
	vsed -i -e '/wasm/s/^/#/' build.sh
	./build.sh
}

do_install() {
  rm bin/dendrite-demo-*
  rm bin/dendritejs*
	vmkdir opt/dendrite/bin/
	vcopy bin/* opt/dendrite/bin/
	vlicense LICENSE
}
