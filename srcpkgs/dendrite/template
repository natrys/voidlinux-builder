revision=1
wrksrc=dendrite-${_commit}
build_style=go
go_import_path="github.com/matrix-org/dendrite"
short_desc="Matrix homeserver written in Go"
maintainer="Imran Khan <imrankhan@teknik.io>"
license="Apache-2.0"
