# Template file for 'maddy'
pkgname=maddy
version=0.5.0
revision=1
build_style=go
go_import_path="github.com/foxcpp/maddy"
short_desc="Composable all-in-one mail server"
maintainer="Imran Khan <imrankhan@teknik.io>"
license="GPL-3.0-or-later"
homepage="https://maddy.email/"
distfiles="https://github.com/foxcpp/maddy/archive/refs/tags/v${version}.tar.gz"
checksum=59fbfd1cd5aaecd71aa3b5879e7e12a73dfdb5cf3c5119cefc3fe84e193682d6

pre_build() {
	vsed -i ./build.sh \
		-e '\#^prefix#s#=.*#=/usr#' \
		-e "\#^destdir#s#=.*#=${DESTDIR}#"
}

do_build() {
	if [ "$XBPS_TARGET_LIBC" = "musl" ]; then
		./build.sh build --static
	else
		./build.sh build
	fi
}

do_install() {
	./build.sh install
}

post_install() {
	rm -rf ${DESTDIR}/usr/lib/systemd/
}
